doi = {10.1890/14-2209.1},
eprint = {9809069v1},
isbn = {9780874216561},
issn = {19395582},
journal = {Ecological Applications},
keywords = {Biogeochemical hotspots,Bottom-up,Coral reefs,Coral restoration,Grunt fish,Nutrient cycling,Nutrient hotspots,Nutrients,Subsidies,Top-down},
number = {8},
pages = {2142--2152},
pmid = {15003161},
primaryClass = {arXiv:gr-qc},
title = {{Fish-derived nutrient hotspots shape coral reef benthic communities}},
volume = {25},
