issn = {13652435},
journal = {Functional Ecology},
keywords = {Anthropocene,coral reef,ecological paradigms,macroecology,prediction,scale,social–ecological macroecology,social–ecological systems},
month = {jun},
number = {6},
pages = {1014--1022},
